<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardPayment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtCardPaymentTitle"
        style="@style/TextAppearance.Sabaid.Body2.Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Title"
        app:layout_constraintEnd_toStartOf="@+id/txtCardPaymentCost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCardPaymentDescription"
        style="@style/TextAppearance.Sabaid.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Description"
        app:layout_constraintEnd_toStartOf="@+id/txtCardPaymentCost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCardPaymentTitle" />

    <TextView
        android:id="@+id/txtCardPaymentCost"
        style="@style/TextAppearance.Sabaid.Body2.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cost"
        app:layout_constraintBottom_toBottomOf="@+id/txtCardPaymentDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCardPaymentStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCardPaymentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>